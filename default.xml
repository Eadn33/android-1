  <!-- Replace build project to build kernel inline from the source -->
  <remove-project name="platform/build" />
  <project path="build" name="android_build" remote="omap4-aosp" revision="aosp-5.1" groups="pdk" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>

  <remove-project name="platform/bootable/recovery" />
  <project path="bootable/recovery" name="android_bootable_recovery" remote="omap4-aosp" revision="aosp-5.1" groups="pdk" />
